#File-Manager
super + shift + Return
	pcmanfm

super + shift + w
    ~/.local/bin/dmenu.sh

#dmenu
super + shift + d
	rofi -show drun

super + shift + plus
    ~/.local/bin/lmc up

super + shift + minus
    ~/.local/bin/lmc down

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

